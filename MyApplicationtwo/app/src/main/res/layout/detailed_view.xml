<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lyft="http://schemas.android.com/apk/res-auto"
    xmlns:uber="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:layout_height="wrap_content">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/frag_img"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="200dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="4"
                android:paddingRight="10dp"
                android:backgroundTint="@color/black"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/detail_here"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:text="@string/was_here"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <Button
                        android:id="@+id/detail_dislike"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_weight="5"
                        android:paddingRight="5dp"
                        android:paddingBottom="5dp"
                        android:background="#FFFFFF"
                        android:drawableTop="@mipmap/ic_thumb_down_black_48dp" />

                    <Button
                        android:id="@+id/detail_like"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_weight="5"
                        android:background="#FFFFFF"
                        android:drawableTop="@mipmap/ic_thumb_up_black_48dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/frag_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="30sp"
            android:textColor="@color/black"/>

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textSize="15sp"
                android:textColor="@color/black"/>
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="40dp">
    <TextView
        android:layout_width="0dp"
        android:id="@+id/categories"
        android:layout_weight="6"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/rating"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_margin="3dp"
        android:textSize="20sp"
        android:layout_height="match_parent"
        android:layout_gravity="right"/>
    <TextView
        android:id="@+id/dollar_sign"
        android:layout_margin="5dp"
        android:textSize="20sp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent" />

</LinearLayout>







        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--<TextView-->
                <!--android:id="@+id/frag_addr"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content" />-->
            <com.lyft.lyftbutton.LyftButton
            android:id="@+id/lyft_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            lyft:lyftStyle="lyftMulberryDark" />

            <com.uber.sdk.android.rides.RideRequestButton
                android:layout_width="match_parent"
                android:paddingTop="5dp"
                android:id="@+id/uber_button"
                android:layout_height="wrap_content"
                uber:ub__style="black" />

        </LinearLayout>





    </LinearLayout>




</ScrollView>
